<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xjw.exam.dao.GradeDao">

    <sql id="normal">
        a.stu_id AS "stuId",
        a.access AS "access",
        a.login_time AS "loginTime"
    </sql>
    <select id="findAllList" resultType="com.xjw.exam.entity.Grade">
        SELECT
        <include refid="normal" />
        FROM grade a
        ORDER BY name
        DESC
    </select>
    <select id="get" resultType="com.xjw.exam.entity.Grade">
        SELECT
        <include refid="normal" />
        FROM grade a
        WHERE
        id=#{id}
    </select>
    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
            keyColumn="id" parameterType="com.xjw.exam.entity.Grade">
        INSERT INTO
        grade(id,name,password)
        VALUES
        (#{id},#{name},#{password})
    </insert>
    <update id="update" parameterType="com.xjw.exam.entity.Grade">
        UPDATE grade
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="password != null">password=#{password}</if>
        </set>
        WHERE id=#{id}
    </update>
    <delete id="delete">
        DELETE FROM
        grade
        WHERE
        id=#{id}
    </delete>
</mapper>