<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xjw.exam.dao.StudentDao">
    <select id="queryStudent" resultType="com.xjw.exam.entity.Student">
        SELECT id,name,password
        FROM student
        ORDER BY name
        DESC
    </select>
    <select id="queryStudentById" resultType="com.xjw.exam.entity.Student">
        SELECT id,name,password
        FROM student
        WHERE
        id=#{id}
    </select>
    <insert id="insertStudent" useGeneratedKeys="true" keyProperty="id"
            keyColumn="id" parameterType="com.xjw.exam.entity.Student">
        INSERT INTO
        student(id,name,password)
        VALUES
        (#{id},#{name},#{password})
    </insert>
    <update id="updateStudent" parameterType="com.xjw.exam.entity.Student">
        UPDATE student
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="password != null">password=#{password}</if>
        </set>
        WHERE id=#{id}
    </update>
    <delete id="deleteStudnet">
        DELETE FROM
        student
        WHERE
        id=#{id}
    </delete>
</mapper>